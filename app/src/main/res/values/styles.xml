<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="TransparentTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
    </style>

    <style name="ThemeAlarms" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:colorBackground">@color/primaryLight</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PickerTheme" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
        <item name="android:colorAccent">@color/primaryDark</item>
    </style>

    <style name="AlertDialog" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/red</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorSwitch</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#148E13</item>
    </style>

</resources>
