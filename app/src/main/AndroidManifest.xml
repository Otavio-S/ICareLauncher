<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.otavio.tcc">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Sample AdMob App ID: ca-app-pub-8321777709085519~4125895113 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <activity
            android:name=".Telas.Home.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/TransparentTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Telas.SOS.TelaSOS"
            android:label="TelaSOS"
            android:parentActivityName=".Telas.Home.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeAlarms">
            <meta-data
                android:name="android.support.SOS_ACTIVITY"
                android:value=".TelaSOS" />
        </activity>

        <activity
            android:name=".Telas.Nota.TelaNotas"
            android:label="TelaNotas"
            android:parentActivityName=".Telas.Home.HomeScreen"
            android:theme="@style/ThemeAlarms">
            <meta-data
                android:name="android.support.NOTAS_ACTIVITY"
                android:value=".TelaNotas" />
        </activity>

        <activity
            android:name=".Telas.Alarmes.TelaAlarmes"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeAlarms" />

        <activity
            android:name=".Telas.Alarmes.EditarAlarmes"
            android:parentActivityName=".Telas.Alarmes.TelaAlarmes"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeAlarms" />

        <activity
            android:name=".Telas.Alarmes.VisualizarHistorico"
            android:parentActivityName=".Telas.Alarmes.TelaAlarmes"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeAlarms" />

        <activity
            android:name=".Telas.Alarmes.NovoAlarme"
            android:parentActivityName=".Telas.Alarmes.TelaAlarmes"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeAlarms" />

        <activity
            android:name=".Telas.Alarmes.Tabs"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeAlarms" />

        <activity
            android:name=".Receiver.FireAlarm"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.Light.NoActionBar" />

        <activity
            android:name=".Telas.SOS.Mensagem"
            android:parentActivityName=".Telas.SOS.TelaSOS"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeAlarms" />

        <receiver
            android:name=".Receiver.AlarmReceiver"
            android:permission="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.test.intent.action.ALARM" />
            </intent-filter>
        </receiver>

    </application>

</manifest>