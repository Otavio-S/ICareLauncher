<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.otavio.tcc">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Telas.HomeScreen"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Telas.TelaSOS"
            android:label="TelaSOS"
            android:parentActivityName=".Telas.HomeScreen">
            <meta-data
                android:name="android.support.SOS_ACTIVITY"
                android:value=".TelaSOS" />
        </activity>

        <activity
            android:name=".Telas.TelaNotas"
            android:label="TelaNotas"
            android:parentActivityName=".Telas.HomeScreen"
            android:theme="@style/ThemeAlarms">
            <meta-data
                android:name="android.support.NOTAS_ACTIVITY"
                android:value=".TelaNotas" />
        </activity>

        <activity
            android:name=".Telas.TelaAlarmes"
            android:theme="@style/ThemeAlarms" />

        <activity
            android:name=".Telas.EditarAlarmes"
            android:parentActivityName=".Telas.TelaAlarmes"
            android:theme="@style/ThemeAlarms" />

        <activity
            android:name=".Telas.VisualizarHistorico"
            android:parentActivityName=".Telas.TelaAlarmes"
            android:theme="@style/ThemeAlarms" />

        <activity
            android:name=".Telas.NovoAlarme"
            android:parentActivityName=".Telas.TelaAlarmes"
            android:theme="@style/ThemeAlarms" />

        <activity android:name=".Telas.Tabs" />

        <activity
            android:name=".Receiver.FireAlarm"
            android:theme="@style/Theme.Design.Light.NoActionBar" />

        <activity
            android:name=".Telas.EditarNotas"
            android:parentActivityName=".Telas.TelaNotas"
            android:theme="@style/ThemeAlarms" />

        <activity
            android:name=".Telas.NovaNota"
            android:parentActivityName=".Telas.TelaNotas"
            android:theme="@style/ThemeAlarms" />

        <receiver android:name=".Receiver.AlarmReceiver">
            <intent-filter>
                <action android:name="com.test.intent.action.ALARM" />
            </intent-filter>
        </receiver>
    </application>

</manifest>